<style media="screen">
<% @banners.each do |banner| %>
<% if banner.name == 'consulting page banner image' %>
#subheader-db { background: url(<%= banner.image_url %>) center center no-repeat; }
<% end %>
<% if banner.name == 'consulting page center image' %>
#section-steps { background: url(<%= banner.image_url %>) center center no-repeat; }
<% end %>
<% end %>
</style>
<body class="page-services">
    <div id="wrapper">
        <!-- header begin -->
        <%= render 'user/contacts/header' %>
        <!-- header close -->

        <!-- subheader -->
        <section id="subheader-db" data-speed="8" data-type="background">
            <div class="container" style="padding-top: 60px;">
                <div class="row">
                    <div class="col-md-12">
                        <h1 class="pull-left" style="color: white;">Consulting</h1>
                        <ul class="crumb">
                            <li><a href="index.html">Home</a></li>
                            <li class="sep">/</li>
                            <li>Consulting</li>
                        </ul>
                    </div>
                </div>
            </div>
        </section>
        <!-- subheader close -->

        <!-- content begin -->
        <section id="section-steps" class="text-light">
            <div class="container">
                <div class="row">
                    <div class="col-md-6 col-md-offset-3 text-center wow fadeInUp">
                        <h1>Consulting Process</h1>
                        <div class="separator"><span><i class="fa fa-circle"></i></span></div>
                        <div class="spacer-single"></div>
                    </div>

                    <div class="col-md-12">
                        <div class="de_tab tab_steps">
                            <ul class="de_nav">
                                <li class="active wow fadeIn" data-wow-delay="0s"><span><%= t ".no_01" %></span><div class="v-border"></div>
                                </li>
                                <li class="wow fadeIn" data-wow-delay=".4s"><span><%= t ".no_02" %></span><div class="v-border"></div>
                                </li>
                                <li class="wow fadeIn" data-wow-delay=".8s"><span><%= t ".no_03" %></span><div class="v-border"></div>
                                </li>
                                <li class="wow fadeIn" data-wow-delay="1.2s"><span><%= t ".no_04" %></span><div class="v-border"></div>
                                </li>
                                <li class="wow fadeIn" data-wow-delay="1.6s"><span><%= t ".no_05" %></span><div class="v-border"></div>
                                </li>
                            </ul>

                            <div class="de_tab_content">

                                <div id="tab1" style="font-size: medium;">
                                    <%= t ".no_01_text" %>
                                </div>

                                <div id="tab2" style="font-size: medium;">
                                    <%= t ".no_02_text" %>
                                </div>

                                <div id="tab3" style="font-size: medium;">
                                    <%= t ".no_03_text" %>
                                </div>
                                <div id="tab4" style="font-size: medium;">
                                    <%= t ".no_04_text" %>
                                </div>

                                <div id="tab5" style="font-size: medium;">
                                   <%= t ".no_05_text" %>
                               </div>

                           </div>

                       </div>
                   </div>
               </div>
           </div>
       </section>

       <!-- FAQ section START -->
       <section id="section-faq" style="background-color: rgb(255, 183, 0, 0.8); padding-top: 20px; padding-bottom: 20px;">
        <div class="container">
            <div class="row">
                <div class="col-md-6 col-md-offset-3 text-center wow fadeInUp">
                    <h1>Frequently Asked Questions</h1>
                    <div class="separator"><span><i class="fa fa-circle"></i></span></div>
                    <div class="spacer-single"></div>
                </div>
            </div>
            <div class="panel-group accordion text-light" id=accordion>
                <% @consulting.each do |c| %>
                <div class="panel panel-default">
                    <div class="panel-heading">
                        <h4 class=panel-title> <a data-toggle=collapse data-parent=#accordion href=#<%= c.id %>> <i class="switch fa fa-plus"></i> <%= c.title %></a> </h4> </div>
                        <div id=<%= c.id %> class="panel-collapse collapse">
                            <% if c.text.present? %>
                            <div class=panel-body><%= sanitize(c.text.html_safe) %></div>
                            <% end %>
                        </div>
                    </div>
                    <% end -%>

                </div>
            </section>
            <!-- FAQ section END -- >

                <!-- contact us Sliding div START -->
                <div id="feedback">
                  <div id="feedback-form" style='display:none;' class="col-xs-4 col-md-4 panel panel-default">
                    <div class="form panel-body">
                        <%= form_for @customer, :url => { :action => "create" } do |f| %>
                        <div class="form-group">
                            <p><%= f.text_field :customer_name, :class => 'form-control', :placeholder => 'your name...', :type => 'text', :required => true, :autocomplete => 'name' %></p>
                        </div>
                        <div class="form-group">
                            <p><%= f.text_field :email, :class => 'form-control', :placeholder => 'your email...', :type => 'email', :required => true, :autocomplete => 'email' %></p>
                        </div>
                        <div class="form-group">
                            <p><%= f.text_field :phone, :class => 'form-control', :placeholder => 'your phone number...', :type => 'number', :required => true, :autocomplete => 'tel' %></p>
                        </div>
                        <div class="form-group">
                            <textarea id="m" class="form-control" placeholder="Type your message here..." rows="5"></textarea>
                        </div>
                        <p><%= f.submit 'Send Message', :class => 'btn btn-line'  %></p>
                        <% end -%>
                    </div>
                </div>
                <div id="feedback-tab">Contact Us</div>
            </div>
            <!-- contact us Sliding div END -->
            <%= render 'user/contacts/footer' %>

        </body>