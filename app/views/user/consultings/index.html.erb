<body class="page-services">
    <div id="wrapper">
        <!-- header begin -->
        <%= render 'user/contacts/header' %>
        <!-- header close -->

        <!-- subheader -->
        <section id="subheader" data-speed="8" data-type="background">
            <div class="container">
                <div class="row">
                    <div class="col-md-12">
                        <h1>Consulting</h1>
                        <ul class="crumb">
                            <li><a href="index.html">Home</a></li>
                            <li class="sep">/</li>
                            <li>Consulting</li>
                        </ul>
                    </div>
                </div>
            </div>
        </section>
        <!-- subheader close -->

        <!-- content begin -->
        <section id="section-steps" class="text-light">
            <div class="container">
                <div class="row">
                    <div class="col-md-6 col-md-offset-3 text-center wow fadeInUp">
                        <h1>Consulting Process</h1>
                        <div class="separator"><span><i class="fa fa-circle"></i></span></div>
                        <div class="spacer-single"></div>
                    </div>

                    <div class="col-md-12">
                        <div class="de_tab tab_steps">
                            <ul class="de_nav">
                                <li class="active wow fadeIn" data-wow-delay="0s"><span>What is your style ?</span><div class="v-border"></div>
                                </li>
                                <li class="wow fadeIn" data-wow-delay=".4s"><span>From style to solution</span><div class="v-border"></div>
                                </li>
                                <li class="wow fadeIn" data-wow-delay=".8s"><span>Realization of solution</span><div class="v-border"></div>
                                </li>
                                <li class="wow fadeIn" data-wow-delay="1.2s"><span>Construction &amp; installation</span><div class="v-border"></div>
                                </li>
                                <li class="wow fadeIn" data-wow-delay="1.6s"><span>The apartment is ready to welcome you</span><div class="v-border"></div>
                                </li>
                            </ul>

                            <div class="de_tab_content">

                                <div id="tab1" style="font-size: medium;">
                                    Customize your interior style simply and interestingly with Lagomdecor's test.
                                </div>

                                <div id="tab2" style="font-size: medium;">
                                    In just 2 hours of talking to Home Stylist, you will receive a package of solutions including: design (with products available at Lagomdecor) and quotes.
                                </div>

                                <div id="tab3" style="font-size: medium;">
                                    Get a more intuitive look through 3D drawings and get detailed quotes based on the solution.
                                </div>
                                <div id="tab4" style="font-size: medium;">
                                    The progress of the works is guaranteed by Lagomdecor will update you weekly via Email.
                                </div>

                                <div id="tab5" style="font-size: medium;">
                                 Enjoy the new private and cozy space in your own way!
                             </div>

                         </div>

                     </div>
                 </div>
             </div>
         </div>
     </section>

     <!-- FAQ section START -->
     <section id="section-faq" style="background-color: rgb(255, 183, 0, 0.8); padding-top: 20px; padding-bottom: 20px;">
        <div class="container">
            <div class="row">
                <div class="col-md-6 col-md-offset-3 text-center wow fadeInUp">
                    <h1>Frequently Asked Questions</h1>
                    <div class="separator"><span><i class="fa fa-circle"></i></span></div>
                    <div class="spacer-single"></div>
                </div>
            </div>
            <div class="panel-group accordion text-light" id=accordion>
                <% @consulting.each do |c| %>
                <div class="panel panel-default">
                    <div class="panel-heading">
                        <h4 class=panel-title> <a data-toggle=collapse data-parent=#accordion href=#<%= c.id %>> <i class="switch fa fa-plus"></i> <%= c.title %></a> </h4> </div>
                        <div id=<%= c.id %> class="panel-collapse collapse">
                            <% if c.text.present? %>
                            <div class=panel-body><%= sanitize(c.text.html_safe) %></div>
                            <% end %>
                        </div>
                    </div>
                    <% end -%>

                </div>
            </section>
            <!-- FAQ section END -- >

                <!-- contact us Sliding div START -->
                <div id="feedback">
                  <div id="feedback-form" style='display:none;' class="col-xs-4 col-md-4 panel panel-default">
                    <div class="form panel-body">
                        <%= form_for @customer, :url => { :action => "create" } do |f| %>
                        <div class="form-group">
                            <p><%= f.text_field :customer_name, :class => 'form-control', :placeholder => 'your name...', :type => 'text', :required => true, :autocomplete => 'name' %></p>
                        </div>
                        <div class="form-group">
                            <p><%= f.text_field :email, :class => 'form-control', :placeholder => 'your email...', :type => 'email', :required => true, :autocomplete => 'email' %></p>
                        </div>
                        <div class="form-group">
                            <p><%= f.text_field :phone, :class => 'form-control', :placeholder => 'your phone number...', :type => 'number', :required => true, :autocomplete => 'tel' %></p>
                        </div>
                        <div class="form-group">
                            <textarea id="m" class="form-control" placeholder="Type your message here..." rows="5"></textarea>
                        </div>
                        <p><%= f.submit 'Send Message', :class => 'btn btn-line'  %></p>
                        <% end -%>
                    </div>
                </div>
                <div id="feedback-tab">Contact Us</div>
            </div>
            <!-- contact us Sliding div END -->
            <%= render 'user/contacts/footer' %>

        </body>