                    <address>
                        <span><%= c.address %></span>
                        <span><strong><%= t ".phone" %>:</strong><%= c.phone %></span>
                        <span><strong><%= t ".fax" %>:</strong><%= c.fax %></span>
                        <span><strong><%= t ".email" %>:</strong><%= c.email %></span>
