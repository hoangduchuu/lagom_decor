<style media="screen">
<% @banners.each do |banner| %>
<% if banner.name == 'projects single page banner image' %>
#subheader-db { background: url(<%= banner.image_url %>) center center no-repeat; }
<% end %>
<% end %>
</style>
<body class="page-projects" style="background-color: white;">

    <div id="wrapper">
        <!-- header begin -->
        <%= render 'user/contacts/header' %>
        <!-- header close -->

        <!-- subheader -->
        <section id="subheader-db" data-speed="8" data-type="background">
            <div class="container" style="padding-top: 60px;">
                <div class="row">
                    <div class="col-md-12">
                        <h1 class="pull-left" style="color: white;"><% if @project.project_name.present? %><%= truncate(sanitize(@project.project_name, :tags => %w(br a)), :length => 20) %><% end %></h1>
                        <ul class="crumb">
                            <li><a href="index.html">Home</a></li>
                            <li class="sep">/</li>
                            <li>Projects</li>
                            <li class="sep">/</li>
                            <% if @project.project_name.present? %>
                            <li><%= truncate(sanitize(@project.project_name, :tags => %w(br a)), :length => 20) %></li>
                            <% end %>
                        </ul>
                    </div>
                </div>
            </div>
        </section>
        <!-- subheader close -->

        <div class="container project-view">

            <div class="row">
                <div class="col-md-8 project-images">
                    <div id="myCarousel" class="carousel slide" data-ride="carousel">
                        <!-- Carousel indicators -->
                        <ol class="carousel-indicators">
                            <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
                            <li data-target="#myCarousel" data-slide-to="1"></li>
                            <li data-target="#myCarousel" data-slide-to="2"></li>
                        </ol>   
                        <!-- Wrapper for carousel items -->
                        <div class="carousel-inner" style="max-height: 450px; width: auto;">
                            <div class="item active">
                                <%= image_tag @project.cover_photo_url if @project.cover_photo.present? %>
                            </div>
                            <div class="item">
                                <%= image_tag @project.image_one_url if @project.image_one.present? %>
                            </div>
                            <div class="item">
                                <%= image_tag @project.image_two_url if @project.image_two.present? %>
                            </div>
                            <div class="item">
                                <%= image_tag @project.image_three_url if @project.image_three.present? %>
                            </div>
                        </div>
                        <!-- Carousel controls -->
                        <div class="slider_wrapper">
                            <a class="carousel-control left" href="#myCarousel" data-slide="prev" style="padding: 150px 0;">
                                <span><i class="fa fa-angle-left"></i></span>
                            </a>
                            <a class="carousel-control right" href="#myCarousel" data-slide="next" style="padding: 150px 0;">
                                <span><i class="fa fa-angle-right"></i></span>
                            </a>
                        </div>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="project-info">
                        <h2><%= @project.project_name %></h2>

                        <div class="details">
                            <div class="info-text">
                                <span class="title">Date</span>
                                <span class="val"><%= @project.date %></span>
                            </div>

                            <div class="info-text">
                                <span class="title">Location</span>
                                <span class="val"><%= @project.location %></span>
                            </div>

                            <div class="info-text">
                                <span class="title">Value</span>
                                <span class="val"><%= @project.value %> â‚«</span>
                            </div>

                            <div class="info-text">
                                <span class="title">Client</span>
                                <span class="val"><%= @project.client %></span>
                            </div>

                            <div class="info-text">
                                <span class="title">Category</span>
                                <span class="val"><%= @project.category %></span>
                            </div>
                        </div>
                        <% if @project.description.present? %>
                        <p><%= sanitize(@project.description.html_safe) %></p>
                        <% end %>

                        <p>
                            <h4>Our Solutions</h4>
                            <% if @project.solution.present? %>
                            <%= sanitize(@project.solution.html_safe) %>
                            <% end %>
                        </p>
                    </p>


                </div>
            </div>
        </div>
    </div>
    <!-- footer begin -->
    <%= render 'user/contacts/footer' %>
    <!-- footer close -->
</div>
</body>
