<style media="screen">
<% @banners.each do |banner| %>
<% if banner.name == 'projects page banner image' %>
#subheader-db { background: url(<%= banner.image_url %>) center center no-repeat; }
<% end %>
<% end %>
</style>
<body class="page-projects">

    <div id="wrapper">
        <!-- header begin -->
        <%= render 'user/contacts/header' %>
        <!-- header close -->

        <!-- subheader -->
        <section id="subheader-db" data-speed="8" data-type="background">
            <div class="container">
                <div class="row">
                    <div class="col-md-12">
                        <h1>Projects</h1>
                        <ul class="crumb">
                            <li><a href="index.html">Home</a></li>
                            <li class="sep">/</li>
                            <li>Projects</li>
                        </ul>
                    </div>
                </div>
            </div>
        </section>
        <!-- subheader close -->

        <!-- content begin -->
        <div id="content">
            <div class="container">

                <div class="spacer-single"></div>

                <!-- portfolio filter begin -->
                <div class="row">
                    <div class="col-md-12">
                        <ul id="filters" class="wow fadeInUp" data-wow-delay="0s">
                            <% @projects.map(&:category).uniq.each do |project| %>
                            <li><a href="#" data-filter=".<%= project %>"><%= project %></a></li>
                            <% end %>
                            <li class="pull-right"><a href="#" data-filter="*" class="selected">All Projects</a></li>
                        </ul>

                    </div>
                </div>
                <!-- portfolio filter close -->

                <div id="gallery" class="row gallery full-gallery de-gallery pf_4_cols wow fadeInUp" data-wow-delay=".3s">

                    <!-- gallery item -->
                    <% @projects.each do |pro| %>
                    <div class="col-md-4 col-sm-6 col-xs-12 item mb30 <%= pro.category %>">
                        <div class="picframe">
                            <%= link_to user_project_path(pro) do %>
                            <span class="overlay">
                                <span class="pf_text">
                                    <span class="project-name"><%= pro.project_name %></span>
                                </span>
                            </span>
                            <% end %>
                            <% if pro.cover_photo.present? %>
                            <%= image_tag pro.cover_photo_url %>
                            <% end %>
                        </div>
                    </div>
                    <% end %>
                    <!-- close gallery item -->

                    <!-- gallery item -->
                    <% @videos.each do |video| %>
                    <div class="col-md-4 col-sm-6 col-xs-12 item mb30 hospitaly">
                        <div class="picframe">
                            <%= link_to user_video_path(video) do %>
                            <span class="overlay">
                                <span class="pf_text">
                                    <span class="project-name"><%= video.project_name %></span>
                                </span>
                            </span>
                            <% end %>
                            <%= image_tag 'youtube.jpg' %>
                        </div>
                    </div>
                    <% end %>
                    <!-- close gallery item -->
                </div>
            </div>
        </div>

        <!-- footer begin -->
        <%= render 'user/contacts/footer' %>
        <!-- footer close -->

    </div>
</body>