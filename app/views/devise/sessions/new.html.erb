<body class="bg-dark">
  <div class="container">
    <div class="card card-login mx-auto mt-5">
      <div class="card-header">Login</div>
      <div class="card-body">
        <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="form-group">
          <label for="exampleInputEmail1">Email address</label>
          <%= f.email_field :email, autofocus: true, autocomplete: 'email', :id => 'exampleInputEmail1', :class => 'form-control' %>
        </div>
        <div class="form-group">
          <label for="exampleInputPassword1">Password</label>
          <%= f.password_field :password, autocomplete: 'off', :id => 'exampleInputPassword1', :class => 'form-control' %>
        </div>
        <div class="form-group">
          <div class="form-check">
            <label class="form-check-label">
              <% if devise_mapping.rememberable? -%>
              <%= f.check_box :remember_me, :class => 'form-check-input' %><label> Remember Me</label>
              <% end %>
            </div>
          </div>
          <%= f.submit 'Log in', :class => 'btn btn-primary btn-block' %>
          <% end %>
          <div class="text-center">
            <%= render "devise/shared/links" %>
          </div>
        </div>
      </div>
    </div>
  </body>
