<ol class="breadcrumb" style="margin-left: 10px; margin-right: 10px;">
	<li class="breadcrumb-item">
		<%= link_to 'DASHBOARD', admin_dashboards_path %>
	</li>
	<li class="breadcrumb-item">
		<%= link_to 'COMMENTS', admin_homes_path %>
	</li>
	<li class="breadcrumb-item active">SHOW</li>
	<%= link_to 'EDIT', edit_admin_comment_path(@comment), :class => 'btn btn-sm btn-info left-right' %>
	<%= link_to ' DELETE', admin_comment_path(@comment), :class => 'btn btn-sm btn-danger', method: :delete, data: { confirm: 'Are you sure?' } %>
	<%= link_to 'NEW IDEA', new_admin_comment_path, :class => 'btn btn-sm btn-success only-left' %>
</ol>

<div class="row" style="margin-left: 10px; margin-right: 10px;">
	<table class="table" style="margin-left: 10px; margin-right: 10px;">
		<tbody>
			<tr>
				<td class="text-success" style="min-width: 200px;"><i class="fa fa-user"></i> Customer Name</td>
				<td style="word-break: break-word;"><%= @comment.title %></td>
			</tr>                                        
		</tbody>
	</table>
	<div class="container">
		<h5 class="text-success">Comment</h5>
		<blockquote>
			<% if @comment.comment.present? %>
			<p><%= sanitize @comment.comment %></p>
			<% end %>
		</blockquote>
	</div>
</div>