<table class="table">
    <thead>
      <tr>
        <th>Title</th>
        <th>Text</th>
      </tr>
    </thead>
    <tbody>
      <% @comments.each do |c| %>
      <tr>
        <td><%= c.title %></td>
        <td><%= c.comment %></td>
        <td><%= link_to 'new', new_admin_comment_path %></td>
        <td><%= link_to 'show', admin_comment_path(c) %></td>
        <td><%= link_to 'edit', edit_admin_comment_path(c) %></td>
        <td><%= link_to "Delete", admin_comment_path(c), method: :delete %></td>
      </tr>
      <% end -%>
    </tbody>
  </table>