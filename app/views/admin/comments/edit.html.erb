<%= form_for [:admin, @comment] do |f| %>

  <div class="form-group">
    <%= f.label :title %>
	<%= f.text_field :title, :class => 'form-control' %><br>
  </div>
  <div class="form-group">
    <%= f.label :comment %>
	<%= f.text_field :comment, :class => 'form-control' %><br>
  </div>
  <%= f.submit 'save', :class => 'btn btn-primary' %>
  <% end -%>