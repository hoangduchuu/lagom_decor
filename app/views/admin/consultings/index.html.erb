<ol class="breadcrumb" style="margin-left: 10px; margin-right: 10px;">
<li class="breadcrumb-item">
  <%= link_to 'DASHBOARD', admin_dashboards_path %>
</li>
<li class="breadcrumb-item active">FAQ</li>
<%= link_to 'NEW FAQ', new_admin_consulting_path, :class => 'btn btn-sm btn-success left-right' %>
</ol>

<div class="card mb-3" style="margin-left: 15px; margin-right: 15px;">
  <div class="card-header">
    <i class="fa fa-table"></i> FAQ</div>
    <div class="card-body">
      <div class="table-responsive">
        <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
          <thead>
            <tr>
              <th>Question</th>
              <th>Answer</th>
              <th>Operations</th>
            </tr>
          </thead>
          <tbody>
            <% @consultings.each do |c| %>
            <tr>
              <td><%= c.title %></td>
              <td><%= truncate(sanitize(c.text, :tags => %w(br a)), :length => 40) %></td>
              <td>
                <%= link_to 'view', admin_consulting_path(c), :class => 'btn btn-sm btn-primary' %>
                <%= link_to 'edit', edit_admin_consulting_path(c), :class => 'btn btn-sm btn-warning' %>
                <%= link_to ' del', admin_consulting_path(c), :class => 'btn btn-sm btn-danger', method: :delete, data: { confirm: 'Are you sure?' } %></td>
              </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>
    </div>