<ol class="breadcrumb" style="margin-left: 10px; margin-right: 10px;">
	<li class="breadcrumb-item">
		<%= link_to 'DASHBOARD', admin_dashboards_path %>
	</li>
	<li class="breadcrumb-item">
		<%= link_to 'CUSTOMERS', admin_dashboards_path %>
	</li>
	<li class="breadcrumb-item active">VIEW</li>
</ol>

<div class="row" style="margin-left: 10px; margin-right: 10px;">
	<div class="col-sm-3">
		<div class="picframe">
			<div class="card mb-3">
				<% if @admin.avatar.present? %>
				<%= image_tag @admin.avatar_url, :class => 'card-img-top img-fluid w-100' %>
				<% else %>
				<%=image_tag('product-not-chosen.jpg', :class => 'card-img-top img-fluid w-100')%>
				<% end %>
			</div>
		</div>
	</div>
	<table class="table" style="margin-left: 10px; margin-right: 10px;">
		<tbody>
			<tr>
				<td class="text-success"><i class="fa fa-sort-numeric-desc"></i> Name</td>
				<td><%= @admin.username %></td>
			</tr> 
			<tr>
				<td class="text-success" style="min-width: 200px;"><i class="fa fa-header"></i> Phone Number</td>
				<td style="word-break: break-word;"><%= @admin.phone %></td>
			</tr>                                        
			<tr>
				<td class="text-success"><i class="fa fa-caret-right"></i> Email</td>
				<td><%= @admin.email %></td>
			</tr>                                        
			<tr>
				<td class="text-success"><i class="fa fa-usd"></i> Role</td>
				<td><%= @admin.role %></td>
			</tr>
			<tr>
				<td class="text-success"><i class="fa fa-wrench"></i> Sign in Count</td>
				<td><%= @admin.sign_in_count %></td>
			</tr>
			<tr>
				<td class="text-success"><i class="fa fa-eye"></i> Last sign in at</td>
				<td><%= @admin.last_sign_in_at %></td>
			</tr>
			<tr>
				<td class="text-danger"><i class="fa fa-pencil-square-o"></i> Current sign in at</td>
				<td><%= @admin.current_sign_in_at %></td>
			</tr>
		</tbody>
	</table>
</div>
