<ol class="breadcrumb" style="margin-left: 10px; margin-right: 10px;">
<li class="breadcrumb-item">
  <a href="#">Dashboard</a>
</li>
<li class="breadcrumb-item active">Customer Management</li>
</ol>

<div class="card mb-3" style="margin-left: 15px; margin-right: 15px;">
  <div class="card-header">
    <i class="fa fa-table"></i> Customer Messages
  </div>
  <div class="card-body">
    <div class="table-responsive">
      <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
        <thead>
          <tr>
            <th>Name</th>
            <th>Phone</th>
            <th>Email</th>
            <th>Message</th>
            <th>Date</th>
            <th>Operations</th>      
          </tr>
        </thead>
        <tbody>
          <% @customers.each do |customer| %>
          <tr>
            <td><%= truncate(customer.customer_name, :length => 15) %></td>
            <td><%= truncate(customer.phone, :length => 12) %></td>
            <td><%= truncate(customer.email, :length => 15) %></td>
            <% if customer.message.present? %>
            <td><%= sanitize (truncate customer.message, :length => 20) %></td>
            <% end %>
            <td><%= customer.created_at.to_date %></td>
            <td><%= link_to 'view', admin_customer_path(customer), :class => 'btn btn-sm btn-info' %>
            <%= link_to "delete", admin_customer_path(customer), method: :delete, data: { confirm: "You sure?" }, :class => 'btn btn-sm btn-danger' %></td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>

