<%= form_for [:admin, @product] do |f| %>

  <div class="form-group">
    <%= f.label :product_number %>
	<%= f.text_field :product_number, :class => 'form-control' %><br>
  </div>
  <div class="form-group">
    <%= f.label :category %>
	<%= f.text_field :category, :class => 'form-control' %><br>
  </div>
  <div class="form-group">
    <%= f.label :name %>
  <%= f.text_field :name, :class => 'form-control' %><br>
  </div>
  <div class="form-group">
    <%= f.label :price %>
  <%= f.text_field :price, :class => 'form-control' %><br>
  </div>
  <%= f.submit 'save', :class => 'btn btn-primary' %>
  <% end -%>