<ol class="breadcrumb">
<li class="breadcrumb-item">
  <a href="#">Dashboard</a>
</li>
<li class="breadcrumb-item">
<%= link_to 'Products', admin_products_path %>
</li>
<li class="breadcrumb-item active">Edit</li>
<%= link_to 'Add new Product', new_admin_product_path, :class => 'btn btn-success left-right' %>
</ol>

<%= form_for [:admin, @product] do |f| %>

<div class="container" style="padding: 50px;">
  <div class="form-group">
    <%= f.label :product_number %>
	<%= f.text_field :product_number, :class => 'form-control' %><br>
  </div>
  <div class="form-group">
    <%= f.label :category %>
    <%= f.select(:category, Product::CATEGORIES) %><br>
  </div>
  <div class="form-group">
    <%= f.label :product_name %>
  <%= f.text_field :product_name, :class => 'form-control' %><br>
  </div>
  <div class="form-group">
    <%= f.label :price %>
  <%= f.text_field :price, :class => 'form-control' %><br>
  </div>
  <div class="form-group">
    <%= f.label :top_rated %>
    <%= f.select(:top_rated, Product::TOP_RATED) %><br>
  </div>
  <div class="form-group">
    <%= f.label :avatar %>
    <%= f.file_field :avatar %><br>
  </div>

  <%= f.submit 'save', :class => 'btn btn-primary' %>
</div>
  <% end -%>