<ol class="breadcrumb">
<li class="breadcrumb-item">
  <a href="#">Dashboard</a>
</li>
<li class="breadcrumb-item">
<%= link_to 'Projects', admin_projects_path %>
</li>
<li class="breadcrumb-item active">New</li>
<%= link_to 'Add new Project', new_admin_project_path, :class => 'btn btn-success left-right' %>
</ol>

<%= form_for [:admin, @project] do |f| %>

<div class="container" style="margin: 50px;">
  <div class="form-group">
    <%= f.label :category %>
    <%= f.select(:category, Project::CATEGORIES) %><br>
  </div>
  <div class="form-group">
    <%= f.label :project_name %>
	<%= f.text_field :project_name, :class => 'form-control' %><br>
  </div>
  <div class="form-group">
    <%= f.label :date %>
  <%= f.text_field :date, :class => 'form-control' %><br>
  </div>
  <div class="form-group">
    <%= f.label :location %>
  <%= f.text_field :location, :class => 'form-control' %><br>
  </div>
  <div class="form-group">
    <%= f.label :value %>
  <%= f.text_field :value, :class => 'form-control' %><br>
  </div>
  <div class="form-group">
    <%= f.label :client %>
  <%= f.text_field :client, :class => 'form-control' %><br>
  </div>
  <div class="form-group">
    <%= f.label :description %>
  <%= f.text_field :description, :class => 'form-control' %><br>
  </div>
  <div class="form-group">
    <%= f.label :solution %>
  <%= f.text_area :solution, :class => 'form-control' %><br>
  </div>
  <div class="form-group">
    <%= f.label :cover_photo %>
    <%= f.file_field :cover_photo %><br>
  </div>

  <%= f.submit 'save', :class => 'btn btn-primary' %>
</div>
  <% end -%>