<ol class="breadcrumb" style="margin-left: 10px; margin-right: 10px;">
<li class="breadcrumb-item">
  <%= link_to 'DASHBOARD', admin_dashboards_path %>
</li>
<li class="breadcrumb-item active">INTERIOR IDEAS</li>
<%= link_to 'NEW IDEA', new_admin_interioridea_path, :class => 'btn btn-sm btn-success left-right' %>
</ol>

<div id="gallery" class="row grid_gallery gallery de-gallery wow fadeInUp" data-wow-delay=".3s" style="margin-left: 10px; margin-right: 10px;">
    <% @interiorideas.each do |interior| %>
    <div class="col-md-4 item">
        <div class="picframe">
            <div class="card mb-3">
                <% if interior.image.present? %>
                <%= link_to image_tag(interior.image_url, :class => 'card-img-top img-fluid w-100'), admin_interioridea_path(interior) %>
                <% else %>
                <%=image_tag('no-post-chosen.jpg', :class => 'card-img-top img-fluid w-100')%>
                <% end %>
            <div class="card-body">
                <h6 class="card-title mb-1"><%= link_to truncate(interior.title, :length => 40), admin_interioridea_path(interior) %></h6>
          </div>
          <hr class="my-0">
          <div class="card-body py-2 small">
            <%= link_to ' view', admin_interioridea_path(interior), :class => 'fas fa fa-eye mr-3 d-inline-block' %>
            <%= link_to ' edit', edit_admin_interioridea_path(interior), :class => 'fas fa fa-pencil mr-3 d-inline-block' %>
            <%= link_to ' delete', admin_interioridea_path(interior), :class => 'fas fa fa-trash-o mr-3 d-inline-block', method: :delete, data: { confirm: 'Are you sure?' } %>
                  </div>
                  <div class="card-footer small text-muted">Last updated <%= interior.updated_at.to_date %></div>
              </div>
          </div>
      </div>
      <% end %>
  </div>