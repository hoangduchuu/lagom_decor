          </div>
        </div>
      <hr class="colorgraph">
      <div class="row">
        <div class="col-xs-12 col-md-6"><%= link_to 'No! I change my mind', admin_interiorideas_path, :class => 'btn btn-primary btn-block btn-lg' %></div> 
        <div class="col-xs-12 col-md-6"><%= f.submit 'add this post', :class => 'btn btn-success btn-block btn-lg' %></div>
      </div>
    </form>
  </div>
